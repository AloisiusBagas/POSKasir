@page
@model PosKasir.Pages.Register.RegisterUserModel
@{
}

<h1>Register User</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="Form.UserName"></label>
        <input class="form-control" asp-for="Form.UserName" />
        <span asp-validation-for="Form.UserName" class="font-italic text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Form.Password"></label>
        <input type="password" class="form-control" asp-for="Form.Password" />
        <span asp-validation-for="Form.Password" class="font-italic text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Form.ConfirmPassword"></label>
        <input type="password" class="form-control" asp-for="Form.ConfirmPassword" />
        <span asp-validation-for="Form.ConfirmPassword" class="font-italic text-danger"></span>
    </div>
    <button type="submit">Register</button>

    <p class="font-italic text-success">@Model.SuccessMessage</p>
    <p class="font-italic text-danger">@Model.BadMessage</p>


</form>